{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div id="loader"></div>
    {% include '/customer/customer_table.html.twig' %}

    <!-- Modal -->
    <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModalTitle">Ajout d'un client</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% include '/customer/customer_form.html.twig' %}
                </div>
            </div>
        </div>
    </div>

{% endblock body %}

{% block javascripts %}
    {{ parent() }}

    <script>
        function filter() {
            $('#loader').prop('hidden', false);
            $('#list').prop('hidden', true);
            $.ajax("/customer?filter=" + $('#filerInput').val() + "", {
                success: function (data) {
                    // alert(data);
                    $('#list').prop('hidden', false);
                    $('#list').html(data);
                    //$("html").html($("html", data).html());
                    $('#loader').prop('hidden', true);
                }

            });
        };

        $(document).ready(function () {
            // console.log("ready!");
            $('#loader').prop('hidden', true);
        });
    </script>

    <script>

        $('#formModal').on('shown.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var modal = $(this);
            var mode = button.data('mode');
            var url = "/customer/create";
            //modal.find('.modal-title').text('Ajout');
            var modalTitle = modal.find('.modal-title');
            modalTitle.text('Ajout');

            if (mode != 0) {
                var modalBody = modal.find('.modal-body');
                modalBody.empty();
                modalBody.html('Chargement...');
                url = "/customer/" + mode + "/edit"
                //modal.find('.modal-title').text('Modification')
                modalTitle.text('Modification');
                var modal = $(this);
                $.ajax(url, {
                    success: function (data) {
                        modalBody.html(data);
                        $('#customerId').val(mode);
                    }
                });
            }

        });

        $('#formModal').on('hidden.bs.modal', function () {
            location.reload();
        })

        $(document).on('submit', 'form', function (e) {
            // il est impératif de commencer avec cette méthode qui va empêcher
            //le navigateur d'envoyer le formulaire lui-même
            e.preventDefault();

            $form = $(e.target);
            modal = $('#formModal');
            var modalBody = modal.find('.modal-body');
            var modalTitle = modal.find('.modal-title');

            var $submitButton = $form.find(':submit');
            $submitButton.html('<i class="fas fa-spinner fa-pulse"></i>');
            $submitButton.prop('disabled', true);
            $submitButton.prop('hidden', true);
            modalTitle.text(getModalTitle(true));
            var formURL = "/customer/create";
            var mode = modal.data('mode');
            if ($('#customerId').val() != 0) {
                formURL = "/customer/" + $('#customerId').val() + "/edit"
            }
            var formData = new FormData(this);
            $.ajax({
                url: formURL,
                type: 'POST',
                data: formData,
                mimeType: "multipart/form-data",
                contentType: false,
                cache: false,
                processData: false,
                success: function (data, textStatus, jqXHR) {
                    var stringHtml = JSON.stringify(data);
                    if (stringHtml.indexOf('form-error') !== -1) {
                        // Submit not OK
                        modalBody.html(data);
                        modalTitle.text(getModalTitle(false));
                    } else {
                        // Submit OK
                        alert("Opération réussie");
                        modal.modal('hide');
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert("Opération échouée");
                  //  modal.modal('hide');
                }
            });
        });

        function getModalTitle(isLoading){
            if(isLoading){
                return "Patientez...";
            }
            if ($('#customerId').val() != 0) {
                return "Modification";
            }else{
                 return "Ajout";
            }
        };


