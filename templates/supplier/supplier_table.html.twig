<div class="container" id="list">
    <h4 class="text-center">
        {% trans %}
        suppliers_list.title
        {% endtrans %}</h4>
    <div class="row">
        <div class="col-7">
            <button class="btn btn-primary" data-toggle="modal" data-mode="0" data-target="#formModal">
                <i class="fa fa-plus"></i>
                Ajouter un fournisseur
            </button>
        </div>
        <div class="col-5">
            <div class="filter">
                <input name="filter" type="text" id="filerInput" placeholder="Nom...">
                <button type="button" onclick="filter()">Filtrer</button>
            </div>
        </div>
    </div>
</br>

<table id="myTable" class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>

            <th>{{ knp_pagination_sortable(suppliers, 'Nom', 'supplier.name') }}</th>
            <th>Adresse</th>
             <th>TÃ©lÃ©phone</th>
              <th>Email</th>
            <th>{{ knp_pagination_sortable(suppliers, 'Statut', '.status') }}</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>

    <tbody id="list">

        {% for supplier in suppliers %}
            <tr>
                <td>{{ supplier.name }}</td>
                <td>{{ supplier.address }}</td>
                <td>{{ supplier.telephone }}</td>
                <td>{{ supplier.email }}</td>
             
                <td>

                    {% if supplier.status == 1 %}
                        Actif
                    {% else %}
                        Inactif
                    {% endif %}

                </td>
                <td>

                    <button class="btn btn-secondary" data-toggle="modal" data-mode="{{supplier.id}}"
                     data-target="#formModal">
                        Modifier
                    </button>

                </td>
                <td>
                    <a href="{{path('supplier_delete',{'id':supplier.id})}}" class="btn btn-danger" onclick="return confirm('Confimez-vous la suppression ?')">Supprimer</a>
                </td>
            </tr>

        {% endfor %}

    </tbody>
</table>

<div class="row">
    <div class="col-4"></div>
    <div class="col-8">
        <div class="navigation">
            {{ knp_pagination_render(suppliers) }}
        </div>
    </div>

</div>
</div>